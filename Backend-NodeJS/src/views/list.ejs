<!DOCTYPE html>
<html lang="en">
    <head>
        <head>
            <title>Phòng Khám</title>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <link rel="stylesheet"
                href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
            <script
                src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
            <script
                src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
            <script
                src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
        </head>
    </head>
    <style>
        .btn-edit{
            border: 3px;
            background-color: blue;
            color: white;
            padding: 2px;
            border-radius: 3px;
        }
        .btn-delete{
            border: 3px;
            background-color: red;
            color: white;
            padding: 2px;
            border-radius: 3px;
        }
    </style>
    <body>
        <div class="container">
            <h2>Danh sách</h2>
            <table class="table table-bordered table-sm">
                <thead>
                    <tr>
                        <th>Email</th>
                        <th>Họ Tên</th>
                        <th>Địa Chỉ</th>
                        <th>Số Điện Thoại</th>
                        <th>Giới Tính</th>
                        <th>Chức Năng</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(data) { %>
                    <tr>
                        <td><%= data.email %></td>
                        <td><%= data.fullname %></td>
                        <td><%= data.address %></td>
                        <td><%= data.phone %></td>
                        <% if (data.gender === false) { %>
                        <td>Nam</td>
                        <% } else { %>
                        <td>Nữ</td>
                        <% } %>
                        <td>
                            <a href="edit?id=<%= data.id %>" class="btn-edit"
                                type="button">Chỉnh Sửa</a>
                            <a href="delete?id=<%= data.id %>"
                                class="btn-delete" type="button">Xóa</a>
                        </td>

                    </tr>

                    <% }); %>
                </tbody>
            </table>
        </div>
    </body>
</html>